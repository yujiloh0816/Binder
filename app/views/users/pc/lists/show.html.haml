.pcShowPage
  .container
    .download_link
      %ul
        %li
          %i.fas.fa-download
          = link_to "all", users_pc_list_path(params[:id], status: "all", format: "csv")
        %li
          %i.fas.fa-download
          = link_to "good", users_pc_list_path(params[:id], status: "good", format: "csv")
        %li
          %i.fas.fa-download
          = link_to "bad", users_pc_list_path(params[:id], status: "bad", format: "csv")

    .lists_table
      %table
        %tr
          %th.img_name
          %th.name name
          %th.domain url
          %th.status status
          %th.http_status access
        - @inspections.each do |inspection|
          %tr{ :class => inspection.company.http_status }
            %td.img_name
              = image_tag inspection.company.img_name.url(:thumb)
            %td.name
              = inspection.company.name
            %td.domain
              = link_to inspection.company.domain, inspection.company.domain
            %td.status
              = inspection.status
            %td.http_status
              = inspection.company.http_status
