.matchingPage
  %header.header
    %i.fas.fa-comments.fa-3x

    .header_logo.listIcon
      = link_to content_tag(:i, "", class: 'far fa-2x fa-file'), users_sp_lists_path
  .container
    .mt-5
      .matchingNum
        = @match_users.size
        人とマッチングしています
      %h2.pageTitle マッチングした人一覧
      .matchingList
        - @match_users.each do |user|
          .matchingCompany= user.company.name
          .matchingPerson
            = form_tag :users_sp_chat_index, method: :post do
              %input{:name => "user_id", :type => "hidden", :value => "#{user.id}"}
              = submit_tag 'チャットを開く', class: "chatForm_btn"
            .matchingPerson_name= user.name
